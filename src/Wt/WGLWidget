  // Unlike the C version, we can't accept a void * here. We must be able
  // to interpret the buffer's data in order to transmit it to the JS side.
  // Probably we'll also want versions with strides and offsets to cope with
  // more complex buffer layouts that we typically see on desktop WebGL apps;
  // suggestions to improve this are welcome
  template<typename Iterator>
  void bufferDatafv(BufferEnum target, const Iterator begin, const Iterator end, BufferUsageEnum usage) {
    js_ << "ctx.bufferData(" << toString(target) << ",";
    renderfv(begin, end);
    js_ << ","<< toString(usage) << ");";
    GLDEBUG;
  }

  template<typename Iterator>
  void bufferDataiv(BufferEnum target, const Iterator begin, const Iterator end,
                    BufferUsageEnum usage, DataTypeEnum type)
  {
    js_ << "ctx.bufferData(" << toString(target) << ",";
    renderiv(begin, end, type);
    js_ << ","<< toString(usage) << ");";
    GLDEBUG;
  }

  template<typename Iterator>
  void bufferSubDatafv(BufferEnum target, unsigned offset, const Iterator begin, const Iterator end)
  {
    js_ << "ctx.bufferSubData(" << toString(target) << "," << offset << ",";
    renderfv(begin, end);
    js_ << ");";
    GLDEBUG;
  }

  template<typename Iterator>
  void bufferSubDataiv(BufferEnum target, unsigned offset, const Iterator begin, Iterator end, DataTypeEnum type)
  {
    js_ << "ctx.bufferSubData(" << toString(target) << "," << offset << ",";
    renderiv(begin, end, type);
    js_ << ");";
    GLDEBUG;
  }


