  }

  void vertexAttribPointer(AttribLocation location, int size,
    DataTypeEnum type, bool normalized, unsigned stride, unsigned offset);

  void viewport(int x, int y, unsigned width, unsigned height);

  // Methods for client-side manipulated matrices. Create one.
  JavaScriptMatrix4x4 createJavaScriptMatrix4();
  // Set the value of a jsMatrix from the client side
  template<typename T>
  void setJavaScriptMatrix4(const JavaScriptMatrix4x4 &jsm, const WGenericMatrix<T, 4, 4> &m) {
    js_ << "mat4.set(";
    WGenericMatrix<T, 4, 4> t(m.transposed());
    renderfv(t.data().begin(), t.data().end());
    js_ << ", " << jsm << ");";
    GLDEBUG;
  }
  // Get the current client-side value of a JavaScriptMatrix
  //WMatrix4x4 getJavaScriptMatrix4();

  void setClientSideLookAtHandler(const JavaScriptMatrix4x4 &m,
                                  double lX, double lY, double lZ,
                                  double uX, double uY, double uZ,
                                  double pitchRate, double yawRate);
  void setClientSideWalkHandler(const JavaScriptMatrix4x4 &m, double frontStep, double rotStep);
  void uniformNormalMatrix4(const UniformLocation &u,
                            const JavaScriptMatrix4x4 &jsm,
                            const WGenericMatrix<double, 4, 4> &mm);

protected:
  DomElementType domElementType() const;
  void render(WFlags<RenderFlag> flags);

private:
  unsigned shaders_;
  unsigned programs_;
  unsigned attributes_;
  unsigned uniforms_;
  unsigned buffers_;
  unsigned textures_;
  unsigned matrices_;
  std::vector<std::pair<std::string, std::string> > preloadImages_;

  JSlot mouseWentDownSlot_;
  JSlot mouseWentUpSlot_;
  JSlot mouseDraggedSlot_;
  JSlot mouseWheelSlot_;

  std::stringstream js_;

  template<typename Iterator>
  void renderfv(Iterator begin, Iterator end)
  {
    char buf[30];
    js_ << "new Float32Array([";
    for (Iterator i = begin; i != end; ++i)
      js_ << (i == begin ? "" : ",") << makeFloat(*i, buf);
    js_ << "])";
  }

  template<typename Iterator>
  void renderiv(Iterator begin, Iterator end, DataTypeEnum type)
  {
    switch (type) {
    case BYTE:
      js_ << "new Int8Array([";
      break;
    case UNSIGNED_BYTE:
      js_ << "new Uint8Array([";
      break;
    case SHORT:
      js_ << "new Int16Array([";
      break;
    case UNSIGNED_SHORT:
      js_ << "new Uint16Array([";
      break;
    case INT:
      js_ << "new Int32Array([";
      break;
    default:
      // Should we warn?
    case UNSIGNED_INT:
      js_ << "new Uint32Array([";
      break;
    }
    char buf[30];
    for (Iterator i = begin; i != end; ++i)
      js_ << (i == begin ? "" : ",") << makeInt(*i, buf);
    js_ << "])";
  }

  char *makeFloat(double d, char *buf);
  static char *makeInt(int i, char *buf);

  static const char *toString(BeginModeEnum mode);
  static const char *toString(BlendingFactorEnum e);
  static const char *toString(BlendEquationModeEnum e);
  static const char *toString(BufferEnum target);
  static const char *toString(BufferUsageEnum usage);
  static const char *toString(CullFaceModeEnum e);
  static const char *toString(EnableCapEnum cap);
  static const char *toString(FrontFaceDirectionEnum e);
  static const char *toString(ParameterEnum e);
  static const char *toString(HintModeEnum e);
  static const char *toString(HintTargetEnum e);
  static const char *toString(DataTypeEnum type);
  static const char *toString(PixelFormatEnum e);
  static const char *toString(PixelTypeEnum e);
  static const char *toString(StencilFunctionEnum f);
  static const char *toString(StencilOpEnum e);
  static const char *toString(TextureFilterEnum e);
  static const char *toString(TextureParameterNameEnum e);
  static const char *toString(TextureTargetEnum e);
  static const char *toString(TextureUnitEnum e);
  static const char *toString(TextureWrapModeEnum e);

  void defineJavaScript();
  void connectJavaScript(EventSignalBase &s,
                         const std::string &methodName);

};

