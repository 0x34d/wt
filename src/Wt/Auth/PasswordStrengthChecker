#ifndef WT_AUTH_PASSWORD_STRENGHT_CHECKER
#define WT_AUTH_PASSWORD_STRENGTH_CHECKER

#include <Wt/Auth/PasswordAuth>

namespace Wt {
  namespace Auth {

class WT_API PasswordStrengthChecker
  : public PasswordAuth::AbstractStrengthChecker
{
public:
  PasswordStrengthChecker();
  virtual ~PasswordStrengthChecker();

  virtual int check(const WString& password) const;

  virtual bool isValid(int result) const;
  virtual WString invalidReason(int result) const;
  virtual int strength(int result) const;
};

  }
}

#endif // WT_AUTH_PASSWORD_STRENGTH_CHECKER
